<odoo>
  <data>

    <record id="account_payment_payment_sale_view_form" model="ir.ui.view">
        <field name="name">Advance Payment in Payment Form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_type']" position="before">
                <field name="sale_id" invisible="1"/>
                <field name="state_sale_invoice" invisible="1"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>