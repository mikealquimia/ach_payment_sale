<odoo>
  <data>

    <record id="sale_payment_invoice_view_form" model="ir.ui.view">
        <field name="name">Advance Payment in Invoice Form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="Sales" invisible='1'>
                  <field name="sale_ids"/>
                </page>
            </xpath>
            <xpath expr="//field[@name='invoice_date']" position="after">
              <field name="add_payment_sale" invisible='1'/>
            </xpath>
            <xpath expr="//button[@name='action_register_payment']" position="before">
              <field name="add_payment_sale" invisible="1"/>
              <button name="action_add_payment_sale" type="object" string="Add Payment Advance" attrs="{'invisible': [('move_type', '=', 'out_invoice'),('add_payment_sale', '=', False)]}"
                        help="Add the added advances in the sales of this invoice." class="oe_highlight" groups="ach_payment_sale.payment_sale"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>